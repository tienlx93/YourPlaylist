<xs:schema version="1.0"
           xmlns="http://yourplaylist.tk/Schema"
           targetNamespace="http://yourplaylist.tk/Schema"
           xmlns:xs="http://www.w3.org/2001/XMLSchema"
           elementFormDefault="qualified">

    <xs:element name="SongList">
        <xs:complexType>
            <xs:sequence>
                <xs:element name="Id" type="xs:string"/>
                <xs:element name="Name" type="xs:string"/>
                <xs:element name="Image" type="xs:string"/>
                <xs:element name="List">
                    <xs:complexType>
                        <xs:sequence>
                            <xs:element name="Song" type="SongType" minOccurs="1" maxOccurs="unbounded"/>
                        </xs:sequence>
                    </xs:complexType>
                </xs:element>
            </xs:sequence>
        </xs:complexType>
    </xs:element>
    
    <xs:complexType name="SongType">
        <xs:sequence>
            <xs:element name="Id" type="xs:string"/>
            <xs:element name="Tilte" type="xs:string"/>
            <xs:element name="Artist" type="xs:string"/>
        </xs:sequence>
    </xs:complexType>
</xs:schema>
